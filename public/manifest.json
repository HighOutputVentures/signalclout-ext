{
  "name": "HOV Extensions",
  "description": "HOV ext for Signal clout profile search",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": ["activeTab", "contextMenus", "tabs"],
  "web_accessible_resources" : ["*.html"],
  "optional_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://bitclout.com/*",
        "https://bitclout.com/*"
      ],
      "js": [
        "./static/js/content.js"
      ],
      "all_frames": false,
      "run_at": "document_start"
    }
  ]
}